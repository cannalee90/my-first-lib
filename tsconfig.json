{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["dom", "esnext"],
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@my-second-lib": ["second/index.ts"]
        }
    },
    "include": ["src/**/*"]
}